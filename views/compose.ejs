<%- include('partials/header') -%>
<h1>Compose</h1>
<form method="post" action="/compose">
	<div class="form-group">
		<label for='title'><strong>Title</strong></label>
		<input id="title"  class="form-control mb-3" type="text" name="postTitle" autocomplete="off">
		<label for="postText"><strong>Post</strong></label>
		<textarea id="postText"  class="form-control mb-3" rows="3" type="text" name="postBody"> </textarea>
	</div>
		<button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include('partials/footer') -%>